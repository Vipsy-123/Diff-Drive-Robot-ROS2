<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Xacros-->
    <xacro:property name="arm_base_side" value="0.1"/>
    <xacro:property name="arm_base_height" value="0.02"/>
    <xacro:property name="arm_length" value="0.3"/>
    <xacro:property name="arm_radius" value="0.02"/>
    
    <!-- Links-->
    <link name="arm_base_link">
        <geometry>
            <box size="${arm_base_side} ${arm_base_side} ${arm_base_height}"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </geometry>
        <collision>
            <box size="${arm_base_side} ${arm_base_side} ${arm_base_height}"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:box_intertia m="0.5" l="${arm_base_side}" w="${arm_base_side}" h="${arm_base_height}"
                             xyz="0 0 0" rpy="0 0 0" />
    </link>

    <link name="forearm_link">
        <geometry>
            <cylinder radius="${arm_radius}" length="${arm_length}"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </geometry>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <cylinder radius="${arm_radius}" length="${arm_length}"/>
        </collision>
        <xacro:cylinder_inertia m="0.3" r="${arm_radius}" h="${arm_length}" xyz="0 0 0" rpy="0 0 0"/>
    </link>

    <link name="hand_link">
        <geometry>
            <cylinder radius="${arm_radius}" length="${arm_length}"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </geometry>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <cylinder radius="${arm_radius}" length="${arm_length}"/>
        </collision>
        <xacro:cylinder_inertia m="0.3" r="${arm_radius}" h="${arm_length}" xyz="0 0 0" rpy="0 0 0"/>
    </link>

    <!-- Joints -->
    <joint name="arm_base_forearm_joint" type="revolute">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="arm_base_link"/>
        <child link="forearm_link"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="${pi / 2.0}" effort="100" velocity="100"/>
        <dynamics friction="0.05" damping="0.1"/>
    </joint>

    <joint name="forearm_hand_joint" type="revolute">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="forearm_link"/>
        <child link="hand_link"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="${pi / 2.0}" effort="100" velocity="100"/>
        <dynamics friction="0.05" damping="0.1"/>
    </joint>



</robot>