<?xml version="1.0"?>
<robot name="my_robot">

    <material name="blue">
        <color rgba="0 0.2 0.8 1"/>
    </material>

    <material name="gray">
        <color rgba="1.0 1.0 0.8 1"/>
    </material>

    <!-- Links -->
    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
    </link>

   <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
    </link>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
    </link>

    <!-- Joints -->
    <joint name="base_link_base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy ="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <joint name="left_wheel_base_joint" type="revolute">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="-0.15 0.225 -0.1" rpy="1.57 0 0"/>s
        <axis xyz="0 0 1"/>
        <limit lower="-1.57" upper="1.57" velocity="100" effort="100"/>
    </joint>

    <joint name="right_wheel_base_joint" type="revolute">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="-0.15 -0.225 -0.1" rpy="1.57 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.57" upper="1.57" velocity="100" effort="100"/>
    </joint>

    <joint name="caster_wheel_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="0.2 0 -0.15" rpy ="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

</robot>
